        "topics": ["user_story_mapping", "discovery_practices"],
        "priority": "high"
      },
      {
        "name": "Jeff Gothelf",
        "topics": ["lean_ux", "continuous_discovery", "hypothesis_driven"],
        "priority": "high"
      },
      {
        "name": "Agile Manifesto",
        "topics": ["agile_values", "agile_principles"],
        "priority": "high"
      },
      {
        "name": "Scrum Guide",
        "topics": ["scrum_roles", "scrum_ceremonies", "scrum_artifacts"],
        "priority": "high"
      }
    ],
    "ethical_principles": [
      "service_to_humanity",
      "unity_in_diversity",
      "consultation",
      "progressive_revelation",
      "elimination_of_prejudice",
      "justice",
      "trustworthiness"
    ]
  }
}
